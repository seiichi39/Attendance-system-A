<% provide(:title, 'base') %>

<h1>拠点一覧</h1>

<div class="col-md-10 col-md-offset-1">
  <table class="table table-condensed table-hover" id="table-users">
    <thead>
      <tr>
        <th></th>
        <th></th>              
        <th>拠点番号</th>
        <th>拠点名</th>
        <th>拠点種類</th>
      </tr>
    </thead>
    
    <% @bases.each do |base| %>
      <tr>
        <td><%= link_to "編集", edit_basis_path(base), class: "btn btn-primary" %></td>
        <td><%= link_to "削除", base, method: :delete,
              data: { confirm: "削除してよろしいですか？" },
              class: "btn btn-primary" %></td>       
        <td><%= base.base_number %></td>
        <td><%= base.base_name %></td>
        <td><%= base.base_type %></td>
      </tr>
    <% end %>
  </table>

  <div class="panel-group">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h4><%= link_to "拠点情報追加", new_basis_path, class: "btn btn-primary" %></h4>
      </div> 
    </div>
  </div>

</div>