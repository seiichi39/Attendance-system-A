<% provide(:title, "Top") %>
<div class="row">
  <div class="col-md-12">
    <div class="center jumbotron" id="top-main">
      <h1 id="top-main-title">勤怠システム</h1>
      <div style="margin-top: 10px;">
        <% unless logged_in? %>
          <%= link_to "ログイン", login_path, class: "btn btn-primary" %>
        <% else %>
          <%= link_to "ログイン状態です", login_path, disabled: true, class: "btn btn-primary" %>
        <% end %>
      </div>
      <p>
        アカウント作成は<%= link_to "こちら", signup_path %>から
      </p>
    </div>
  </div>
</div>