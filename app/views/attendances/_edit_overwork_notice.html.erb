<% provide(:class_text, 'overwork-notice') %>
<% provide(:button_text, '変更を送信する') %>

<div class="modal-dialog modal-lg modal-dialog-center">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">×</span>
      </button>
    </div>
    <% @request_users.each do |user| %>
    <div class="modal-body">
      <%= form_with(model: @user, url: attendances_update_overwork_notice_user_path(@user, @attendance), local: true, method: :patch) do |f| %>
      <%= render 'shared/error_messages', object: @attendance %>
        <table class="table table-bordered table-condensed table-hover" id="table-overwork-notice">
          <h1 class="modal-title">【<%= user.name %>からの残業申請】</h1>
            <thead class="overtime-request">
              <tr>
                <th>日付</th>
                <th>曜日</th>
                <th>終了予定時間</th>
                <th>指定勤務終了時間</th>
                <th>時間外時間</th>
                <th>業務処理内容</th>
                <th>指示者確認㊞</th>
                <th>変更</th>
                <th>勤怠を確認する</th>
              </tr>
            </thead>
            <tbody class="line">
              <% @attendance_lists.where(user_id: user.id).each do |work_day| %>
                <%= f.fields_for "attendances[]", work_day do |attendance| %>
                  <% if work_day.overwork_next_day == true %>
                    <% year = (work_day.worked_on + 1).year %>
                    <% month = (work_day.worked_on + 1).month %>
                    <% day = (work_day.worked_on + 1).day %>
                    <% day1 = (work_day.worked_on).day %>
                  <% else %>
                    <% year = (work_day.worked_on).year %>
                    <% month = (work_day.worked_on).month %>
                    <% day = (work_day.worked_on).day %>
                    <% day1 = (work_day.worked_on).day %>
                  <% end %>
                    <% hour = work_day.scheduled_finished_at.hour %>
                    <% min = work_day.scheduled_finished_at.min %>
                  <% work_day.scheduled_finished_at = Time.new(year, month, day, hour, min, 0,).to_time.to_s %>
                    <% hour1 = user.designed_work_end_time.hour %>
                    <% min1 = user.designed_work_end_time.min %>
                  <% user.designed_work_end_time = Time.new(year, month, day1, hour1, min1, 0,).to_time.to_s %>
                  <% cal_time = (work_day.scheduled_finished_at - user.designed_work_end_time) %>
                  <tr>
                    <td><%= l(work_day.worked_on, format: :short) %></td>
                    <td><%= $days_of_the_week[work_day.worked_on.wday] %></td>
                    <td><%= l(work_day.scheduled_finished_at, format: :time) %></td>
                    <td><%= format_basic_info(user.designed_work_end_time) %></td>
                    <td><%= @time = overwork_time(cal_time) %></td>
                    <td><%= work_day.business_processing_content %></td>
                    <td>
                      <%= attendance.select :overwork_request_status, [['なし'], ['申請中'], ['承認'], ['否認']], { selected: work_day.overwork_request_status } %>
                    </td>
                    <td><%= attendance.check_box :overwork_change, {class: "change"}, 'true', 'false' %></td>
                    <td><%= link_to "確認", user_path(user), class: "btn btn-primary" %></td>
                    <%= attendance.hidden_field :over_work_time, value: @time %>
                  </tr>
                <% end %>
              <% end %> 
            </tbody>                   
          </table>
          <div class="center">
            <%= f.submit yield(:button_text), class: "btn btn-primary btn-block btn-#{yield(:class_text)}" %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>